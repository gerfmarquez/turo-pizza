<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_business_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/tv_business_rating"
        android:maxLines="2"
        />
    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_below="@id/tv_business_name"
        android:layout_alignParentLeft="true"

        />
    <TextView
        android:id="@+id/tv_business_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="35sp"
        android:layout_toLeftOf="@id/iv_business_thumbnail"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="12dp"
        />

    <ImageView
        android:id="@+id/iv_business_thumbnail"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter"
        android:layout_margin="7dp"
        />

</RelativeLayout>